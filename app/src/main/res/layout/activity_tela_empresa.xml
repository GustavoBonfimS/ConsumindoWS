<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/background"
    tools:context=".telaEmpresa">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FF952B">

        <TextView
            android:id="@+id/tvNomeEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="47dp"
            android:layout_marginBottom="50dp"
            android:text="nome da empresa"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#FF952B"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layou_marginTop="20dp">

        <TextView
            android:id="@+id/tvEnderecoEmpresa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Endereço"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#FF952B"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layou_marginTop="20dp">

        <TextView
            android:id="@+id/tvTipoEmpresa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tipo"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnAvaliar"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Avaliar"
        android:textColor="#FFFFFF"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="AVALIAÇÕES"
        android:textSize="35sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@drawable/background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Autor"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="Conteudo"
            android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>

</ScrollView>